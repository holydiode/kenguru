@model List<goods>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="glass-case">

    @foreach (goods curent in ViewBag.Goods)
    {
        <a href="/Home/Goods/@curent.id">
            <div class="goods">
                <div class="goods-field goods-intro">
                </div>
                <div class="goods-right">
                    <div class="goods-info goods-field">
                        @curent.title
                    </div>
                    <div class="goods-price goods-field">
                        Цена: @curent.price
                    </div>
                    <div class="goods-seller goods-field">
                        Продавец: @curent.id_seller
                    </div>
                </div>
            </div>
        </a>
    }

</div>

